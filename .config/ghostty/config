command = "/opt/homebrew/bin/fish --login"
initial-command = "/opt/homebrew/bin/fish --login -c 'sesh_start'"
shell-integration = fish
shell-integration-features = "no-cursor,sudo,title"

bold-is-bright = false
macos-window-shadow = false
mouse-hide-while-typing = true
window-padding-balance = true
window-padding-x = 2
window-padding-y = 2
window-save-state = always
window-theme = auto
# maximise by default
window-width = 9999
window-height = 9999

background=1D2021
foreground=ECDAB0

# font
font-family="Berkeley Mono"
font-size = 16
font-feature = -calt
font-feature = -liga
font-feature = -dlig
adjust-underline-position = 2
adjust-cell-height = 3

# visuals
theme = "Kanagawa Dragon"
window-decoration = false
macos-titlebar-style = hidden

clipboard-read = "allow"
clipboard-trim-trailing-spaces = true
clipboard-write = "allow"

#################
## keybindings ##
#################
# Some useful encoded characters:
# \x0a = Enter/Return
# \x1b = Esc
# \x02 = <C-b> (tmux prefix)
# \x01 = <C-a> (tmux prefix)

macos-option-as-alt = left

# keybind = global:cmd+escape=toggle_quick_terminal
# keybind = global:alt+enter=toggle_fullscreen

# TMUX

# switch to window by index (1-based)
keybind = super+physical:one=text:\x021
keybind = super+physical:two=text:\x022
keybind = super+physical:three=text:\x023
keybind = super+physical:four=text:\x024
keybind = super+physical:five=text:\x025
keybind = super+physical:six=text:\x026
keybind = super+physical:seven=text:\x027
keybind = super+physical:eight=text:\x028
keybind = super+physical:nine=text:\x029

# new tab
keybind = super+t=text:\x02\x63
keybind = ctrl+tab=text:\x02\x62

# splits
keybind = super+ctrl+l=text:\x02\x7c
keybind = super+ctrl+j=text:\x02\x2d
keybind = super+ctrl+m=text:\x02\x7a

# close window
keybind = super+q=text:\x02\x78


# NVIM cmds
keybind = cmd+s=text:\x1b\x1b:w\x0a
# keybind = cmd+q=text:\x1b\x1b:q!\x0a
keybind = cmd+p=text:\x1b\x1b\x20sf
keybind = cmd+shift+f=text:\x1b\x1b\x20sg
keybind = cmd+f=text:\x1b\x1b\x20sw
keybind = cmd+w=text:\x1b\x1b:bdelete\x0a

# <perfix>+k (open sesh picker)
keybind = super+k=text:\x02\x4b
