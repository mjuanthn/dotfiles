{
  // Disable telemetry
  "telemetry.telemetryLevel": "off",
  // Zen mode
  "zenMode.fullScreen": true,
  "zenMode.centerLayout": false,
  "editor.fontFamily": "Berkeley Mono",
  "editor.fontLigatures": true,
  "window.autoDetectColorScheme": true,
  "editor.codeLensFontSize": 12,
  "editor.lineHeight": 1.75,
  "editor.suggestFontSize": 13,
  "editor.suggestLineHeight": 28,
  // More minimal UI
  "problems.decorations.enabled": false,
  "gitlens.codeLens.enabled": false,
  "explorer.decorations.colors": false,
  "git.decorations.enabled": false,
  "editor.scrollbar.horizontalScrollbarSize": 0,
  "editor.scrollbar.verticalScrollbarSize": 0,
  "explorer.decorations.badges": false,
  "git.enableSmartCommit": true,
  "workbench.editor.showIcons": false,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.startupEditor": "newUntitledFile",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.minimap.enabled": false,
  "editor.folding": true,
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.tabSizing": "shrink",
  "workbench.welcomePage.walkthroughs.openOnInstall": false,
  "breadcrumbs.enabled": false,
  "editor.lightbulb.enabled": "off",
  "editor.overviewRulerBorder": false,
  "editor.renderLineHighlight": "line",
  "editor.renderControlCharacters": false,
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.hideCursorInOverviewRuler": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  // Theme-specific UI
  "diffEditor.renderSideBySide": false,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.snippetSuggestions": "bottom",
  "editor.detectIndentation": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "files.insertFinalNewline": true,
  "window.nativeFullScreen": true,
  "window.newWindowDimensions": "inherit",
  // Search
  "search.smartCase": true,
  "search.useIgnoreFiles": false,
  "search.exclude": {
    "**/vendor/*": true,
    "**/coverage/*": true,
    "**/public/*": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true
  },
  // Code
  // Include "-" in word selection.
  // "editor.wordSeparators": "`~!@#%^&*():+[{]}\\|;:'\",.<>/?",
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.tabCompletion": "on",
  "emmet.triggerExpansionOnTab": true,
  "explorer.openEditors.visible": 1,
  // Files to display
  "files.enableTrash": false,
  "window.title": "${activeEditorShort} - ${activeEditorMedium}",
  "files.watcherExclude": {
    "**/.output/**": true,
    "**/.yarn/**": true,
    "**/node_modules/**": true,
    "backend/vendor/**": true
  },
  "editor.semanticHighlighting.enabled": true,
  "editor.linkedEditing": true,
  "editor.bracketPairColorization.enabled": false,
  // Suggestions
  "editor.inlineSuggest.enabled": true,
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.suggestSelection": "first",
  "editor.hover.enabled": false,
  "editor.suggest.showWords": false,
  "emmet.showAbbreviationSuggestions": false,
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.suggest.completeFunctionCalls": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "workbench.layoutControl.enabled": false,
  "debug.console.fontFamily": "Berkeley Mono",
  "editor.suggestOnTriggerCharacters": false,
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "gitlens.advanced.messages": {
    "suppressCreatePullRequestPrompt": true
  },
  "update.mode": "none",
  "scss.hover.references": false,
  "terminal.integrated.tabs.location": "left",
  "eslint.codeActionsOnSave.mode": "problems",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.validate": ["javascript"],
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "yaml": false,
    "test": true
  },
  "scm.diffDecorations": "none",
  "scm.diffDecorationsGutterAction": "none",
  "scm.diffDecorationsGutterVisibility": "hover",
  "scm.diffDecorationsGutterWidth": 1,
  "editor.guides.highlightActiveBracketPair": false,
  "gitlens.currentLine.enabled": false,
  "workbench.editor.enablePreview": false,
  "editor.parameterHints.enabled": false,
  "editor.inlayHints.enabled": "off",
  "editor.tabSize": 2,
  "editor.lineNumbers": "off", //"relative",
  "settingsSync.ignoredExtensions": [],
  "window.commandCenter": false,
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "fonted.font": "Berkeley Mono",
  "editor.formatOnPaste": true,
  "terminal.integrated.customGlyphs": true,
  "apc.electron": {
    "titleBarStyle": "hiddenInset"
  },
  "apc.header": {
    "height": 20
  },
  "apc.sidebar.titlebar": {
    "height": 20,
    "fontSize": 10
  },
  "apc.statusBar": {
    "position": "bottom", // "editor-bottom",
    "fontSize": 11
  },
  "apc.listRow": {
    "lists": ["explorer-folders-view", "quick-input-list", "results"],
    "height": 20
  },
  "apc.menubar.compact": true,
  "apc.stylesheet": {
    ".quick-input-widget.show-file-icons": "box-shadow: none !important",
    ".editor-widget.find-widget": "box-shadow: none !important",
    ".panel .composite.title": "opacity: 0 !important; padding-top: 6px !important; padding-left: 4rem !important; border: none !important; transition: opacity 0.2s ease-in-out !important;",
    ".panel .composite.title:hover": "opacity: 1 !important",
    ".monaco-editor .scroll-decoration": "display: none !important",
    ".monaco-scrollable-element > .shadow.top": "display: none !important",
    ".monaco-workbench .monaco-list:not(.element-focused):focus:before": "outline: none !important",
    // editor title
    ".title": "--editor-group-tab-height: 22px !important; height: 34px !important;", //background-color: #1D2021 !important;",
    ".title .title-actions": "opacity: 0 !important; transition: opacity 0.2s ease-in-out !important",
    ".title:hover .title-actions": "opacity: 1 !important",
    ".editor-group-container > .title > .label-container": "padding-top: .4rem !important; background-color: transparent !important",
    ".editor-group-container > .title > .label-container > .title-label": "padding-left: 6px !important",
    ".editor-group-container > .title > .title-actions": "height: 34px !important; background-color: transparent !important",
    ".editor-group-container > .title .label-name": "background-color: #2C2C2B; border-radius: .38rem; padding: .2rem .4rem; font-size: 12px !important;",
    ".editor-group-container > .title .label-description": "font-size: 10px !important",
    ".editor-group-container > .title .label-description:before": "content: '  ' !important; font-family: 'JetBrainsMono Nerd Font' !important; font-size: 10px !important;",
    // editor
    ".editor-container": "height: 100% !important",
    // statusbar
    ".statusbar": "--status-border-top-color: transparent !important; color: #4B4B49 !important; transition: color 0.1s ease-in-out !important", // background-color: #1D2021 !important;
    ".statusbar:hover": "color: #D0C8C6 !important",
    // sidebar
    ".sidebar": "border: none !important; background-color: #1D2021 !important",
    ".sidebar .monaco-list-rows": "background-color: transparent !important",
    ".sidebar .composite.title": "margin: 8px auto auto -4px !important; ", // sidebar title position
    ".sidebar .title-label": "padding: 0 !important",
    ".sidebar .pane-header": "background-color: transparent !important; border-top: none !important; font-size: 10px !important",
    ".sidebar .pane-header .title": "font-size: 10px !important; margin-top: .8rem !important;",
    // extras
    ".letterpress": "display: none !important"
  },
  "apc.font.family": "Berkeley Mono",
  "apc.monospace.font.family": "Berkeley Mono",
  "markdown.preview.fontFamily": "'Berkeley Mono', -apple-system, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', system-ui, 'Ubuntu', 'Droid Sans', sans-serif",
  "vue.server.hybridMode": true,
  "git.openRepositoryInParentFolders": "never",
  "editor.accessibilitySupport": "off",
  "github.copilot.editor.enableAutoCompletions": true,
  "vue.autoInsert.dotValue": true,
  "window.zoomLevel": 1,
  "explorer.confirmDragAndDrop": false,
  "explorer.enableDragAndDrop": false,
  "editor.dragAndDrop": false,
  "editor.dropIntoEditor.enabled": false,
  "rust-analyzer.inlayHints.chainingHints.enable": false,
  "rust-analyzer.inlayHints.closingBraceHints.enable": false,
  "rust-analyzer.inlayHints.renderColons": false,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.lineHeight": 1.28,
  "accessibility.signals.noInlayHints": {
    "sound": "off"
  },
  "workbench.editor.tabActionCloseVisibility": false,
  "zenMode.showTabs": "single",
  "editor.stickyScroll.enabled": false,
  "editor.colorDecorators": false,
  "editor.colorDecoratorsActivatedOn": "click",
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1,
    "asvetliakov.vscode-neovim": 1
  },
  "notebook.dragAndDropEnabled": false,
  "workbench.editor.autoLockGroups": {
    "default": true,
    "workbench.editor.chatSession": true,
    "workbench.editorinputs.searchEditorInput": true,
    "workbench.editors.gettingStartedInput": true,
    "jupyter-notebook": true,
    "imagePreview.previewEditor": true,
    "vscode.audioPreview": true,
    "vscode.videoPreview": true,
    "jsProfileVisualizer.cpuprofile.table": true,
    "jsProfileVisualizer.heapprofile.table": true,
    "jsProfileVisualizer.heapsnapshot.table": true,
    "gitlens.rebase": true,
    "workbench.input.interactive": true,
    "mainThreadWebview-markdown.preview": true
  },
  "workbench.colorTheme": "Gruvbox ish Dark Hard",
  "window.titleBarStyle": "native",
  "[vue]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[mjml]": {
    "editor.defaultFormatter": "attilabuti.vscode-mjml"
  },
  "mjml.autoPreview": true,
  "editor.indentSize": "tabSize",
  "editor.scrollBeyondLastColumn": 8,
  "editor.smoothScrolling": true,
  "vscode-neovim.compositeKeys": {
    "jj": {
      "command": "vscode-neovim.escape"
    },
    "jk": {
      "command": "vscode-neovim.lua",
      "args": [
        [
          "local code = require('vscode')",
          "code.action('vscode-neovim.escape')",
          "code.action('workbench.action.files.save')"
        ]
      ]
    }
  },
  "editor.guides.indentation": false,
  "editor.fontSize": 14,
  "debug.console.fontSize": 12,
  "terminal.integrated.fontSize": 13,
  "workbench.editor.showTabs": "single",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.iconTheme": "quill-icons",
  "workbench.preferredDarkColorTheme": "Vitesse Dark",
  "workbench.activityBar.location": "hidden",
  "workbench.sideBar.location": "right",
  "workbench.tree.enableStickyScroll": false,
  "editor.stickyScroll.scrollWithEditor": false,
  "rainbow_csv.enable_sticky_header": false,
  "gitlens.views.scm.grouped.views": {
    "commits": false,
    "branches": true,
    "remotes": true,
    "stashes": true,
    "tags": true,
    "worktrees": true,
    "contributors": true,
    "repositories": false,
    "searchAndCompare": false,
    "launchpad": true
  },
  "git.confirmSync": false,
  "vim.useSystemClipboard": true
}
